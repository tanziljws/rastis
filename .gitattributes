# Auto detect text files and perform LF normalization
* text=auto

# Force LF for specific file types
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.blade.php text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.txt text eol=lf
*.env text eol=lf
*.env.example text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Explicitly declare files that are always text and normalize them
*.php text eol=lf
*.blade.php text eol=lf
*.js text eol=lf
*.css text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
